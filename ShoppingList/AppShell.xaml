<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingList"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{DynamicResource NavigationBarColor}">
    <FlyoutItem CurrentItem="{x:Reference MemoryCard}" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Promises" Icon="icon_handshake.png" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent x:Name="MemoryCard" Title="MemoryCard" Icon="icon_heart.png" ContentTemplate="{DataTemplate local:HomePage}" Route="home" />
        <Tab Title="Memories" Icon="icon_image.png">
            <ShellContent Title="Images" ContentTemplate="{DataTemplate local:ImagesPage}" />
            <ShellContent Title="Albums" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>
    <ShellContent Title="Settings" Route="settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
</Shell>
